#!/usr/bin/with-contenv bashio
# ==============================================================================
# Kodi addon
# ==============================================================================
declare -a options

bashio::log.info "Starting Kodi ..."

mkdir -p  ~/.kodi/userdata || exit 1
cat << __EOF__ > ~/.kodi/userdata/advancedsettings.xml
<advancedsettings>
    <loglevel>2</loglevel>  
</advancedsettings>
__EOF__


kodi --help
kodi --windowing=gbm
#export KODI_HOME=/usr/share/kodi/

#/usr/local/lib/kodi/kodi-gbm --standalone

while true;
 sleep 300
fi
